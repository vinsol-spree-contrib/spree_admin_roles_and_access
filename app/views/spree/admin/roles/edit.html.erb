<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:editing_role) %> <i class="arrow-right"></i> <%= @role.name %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_roles_list), admin_roles_path, :icon => 'arrow-left' %>
  </li>
  <li id="new_permission_link">
    <%= button_link_to Spree.t(:new_role), new_admin_role_path, :icon => 'plus', :id => 'admin_new_role_link' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @role } %>

<%= form_for([:admin, @role], :html => { :method => :put }) do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => {:f => f} %>
    <div data-hook="buttons" class="filter-actions actions">
      <%= button Spree.t('actions.update'), 'icon-refresh' %>
    </div>
  </fieldset>
<% end %>
